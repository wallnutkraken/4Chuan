<UserControl x:Class="Jackie4Chuan.OP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Jackie4Chuan"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="525">
    <Grid Background="#FFD3CAFF">
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" MouseUp="image_MouseUp"/>
        <Label x:Name="name" HorizontalAlignment="Left" Content="Anonymous [Subject]" Margin="100,0,0,0" Height="26" VerticalAlignment="Top"/>
        <Label x:Name="number" Background="#FFD3CAFF" HorizontalAlignment="Right" HorizontalContentAlignment="Right" VerticalAlignment="Top" Height="26" Width="80" Content="454648777" FontWeight="Bold" MouseUp="number_MouseUp"/>
        <TextBlock x:Name="comment" TextWrapping="Wrap" Background="#FFB9ABFF" HorizontalAlignment="Stretch" Margin="105,26,0,0" VerticalAlignment="Stretch"/>

    </Grid>
</UserControl>
